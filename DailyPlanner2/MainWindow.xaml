            </StackPanel>
        </ScrollViewer>
        <Button x:Name="AddTask" Content="+" Grid.Column="0" Grid.Row="2" Height="60"
                Width="60" HorizontalAlignment="Left" Margin="5"
                Click="AddTask_Click"/>
        <Button x:Name="DeleteTask" Content="-" Grid.Column="0" Grid.Row="2" Height="60"
                Width="60" HorizontalAlignment="Center" Margin="5"
